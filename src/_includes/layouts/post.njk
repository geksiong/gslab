---
layout: default
---

<div style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.1), rgba(0,0,0,0.7)), url('{{ thumb | url }}');" class="w-full pt-32 pb-2 bg-center bg-cover">
  <div class="max-w-5xl mx-auto">
    <header class="mb-4 text-white">
    <h1 class="mt-0 mb-2 font-medium text-center text-white" style="text-shadow: 2px 2px 4px #000;">{{ title }}</h1>
    <div class="text-center" style="text-shadow: 2px 2px 4px #000;">Published on {{ page.date | readableDate }}</div>
    <div class="text-center" style="text-shadow: 2px 2px 4px #000;">Reading time: about {{ content | readingTime }}</div>
    {% if tags %}
    <div class="mt-3 text-center">
      {% for tag in tags %}
      <a href="{{ ('/tags/' + tag) | url }}" class="inline-block px-3 py-1 text-sm font-medium text-gray-700 bg-gray-200 rounded-full m-1/2">#{{ tag }}</a>
      {% endfor %}
    </div>
    {% endif %}
  </header>

  </div>
</div>

<article class="max-w-5xl mx-auto mt-12">
  <div id="content" class="mx-6 text-lg leading-relaxed lg:mx-0">
    {{ content | safe }}
  </div>

  <div class="flex justify-between mx-6 mt-10 lg:mx-0">
    <p class="text-left">
      {% if newerPost.url %}
      <a href="{{ newerPost.url }}">« {{ newerPost.data.title }}</a><br/>
      <span class="text-sm text-gray-500">Newer</span>
    {% endif %}
    </p>
    <p class="text-right">
    {% if olderPost.url %}
      <a href="{{ olderPost.url }}">{{ olderPost.data.title }} »</a><br/>
      <span class="text-sm text-gray-500">Older</span>
    {% endif %}
    </p>
  </div>

  {% if site.disqusShortname %}
  <div class="mx-6 mt-10 lg:mx-0">
    {% if process.environment === "production" %}
    {% include "partials/disqus.njk" %}
    {% else %}
    <div class="text-lg italic text-gray-700">Disqus comments only available for production</div>
    {% endif %}
  </div>
  {% endif %}
</article>

